package com.itwill.loop02;

public class LoopMain02 {

	public static void main(String[] args) {
		// 5 4 3 2 1 출력
		for(int i = 5; i > 0; i--) { 	// true 일때 실행 false일때 정지
			System.out.print(i+" ");
		}
		
		System.out.println(); // 줄바꿈
		
		// 0 2 4 6 8 10 출력
		
		for(int n = 0; n<11; n++) {
			System.out.print(n+" ");
			n++
		}

	}

}
