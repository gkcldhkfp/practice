package com.itwill.loop12;

import java.util.Random;

public class LoopMain12 {

	public static void main(String[] args) {
		// 교재 연습문제 3번
		Random r = new Random();

		

		do {
			
			int x = r.nextInt(1,7);
			
			int y = r.nextInt(1,7);
			
				System.out.printf("눈 1 = %d \n눈 2 = %d \n", x, y);
				System.out.println("----------------");

		} while(x + y != 5);
		
		System.out.println(x+y);
		
		// 교재 연습문제 4번
		
		
		
		for (int x= 1; x <= 10; x++) {
			for(int y = 1; y <= 10; y++) {
				if ((4*x) + (5*y) == 60) {
					System.out.printf("x = %2d y = %2d\n", x, y);
				}
			}
		}

	}

}
