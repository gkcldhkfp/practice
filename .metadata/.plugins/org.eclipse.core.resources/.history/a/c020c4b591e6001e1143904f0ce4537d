package com.itwill.loop13;

public class LoopMain13 {

	public static void main(String[] args) {
		// 교재 연습문제 5
		for (int a = 1; a <= 4; a++) {
			for (int b = 1; b <= a; b++) {
				System.out.print("*");
			}
			System.out.println();
		}

		System.out.println("====================");

		// 교재 연습문제 6

		System.out.println("교재 Ex 6-1");
		
		for (int a = 1; a <= 4; a++) {
			for (int b = 1; b <= 4; b++) {
				if ((4-a) <= b) {
					System.out.print(" ");
				} else {
					System.out.print("*");
				}
			}

			System.out.println();

		}

	}

}
